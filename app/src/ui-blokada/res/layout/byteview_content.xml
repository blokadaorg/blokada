<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/byte_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:background="@drawable/bg_dashboard_item"
    android:padding="@dimen/slot_content_padding">

    <ImageView
        android:id="@+id/byte_arrow"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:src="@drawable/ic_dots_horizontal"
        android:tint="@color/colorActive" />

    <ImageView
        android:id="@+id/byte_icon"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_vertical"
        android:padding="@dimen/slot_icon_margin"
        android:src="@drawable/ic_block"
        android:tint="@color/colorActive" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="40dp"
        android:gravity="start"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/byte_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/slot_secondary_padding"
            android:layout_marginEnd="@dimen/slot_secondary_padding"
            android:gravity="start"
            android:maxLines="3"
            android:textColor="@color/colorActive"
            android:textSize="@dimen/slot_text_size"
            tools:text="This is a very long text that should be displayed just fine" />

        <TextView
            android:id="@+id/byte_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/slot_secondary_padding"
            android:layout_marginEnd="@dimen/slot_secondary_padding"
            android:gravity="start"
            android:maxLines="5"
            android:textColor="@color/colorInactive"
            android:textSize="@dimen/slot_secondary_text_size"
            tools:text="blocked" />
    </LinearLayout>

</FrameLayout>
