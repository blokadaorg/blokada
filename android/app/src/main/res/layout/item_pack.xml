<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/normal"
    android:paddingEnd="@dimen/normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/normal"
        android:paddingBottom="@dimen/normal">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pack_thumb"
            android:layout_width="@dimen/icon_huge"
            android:layout_height="@dimen/icon_huge"
            android:src="@drawable/feature_phishingarmy"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/normal">

            <TextView
                android:id="@+id/pack_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Super long and very funny feature name" />

            <TextView
                android:id="@+id/pack_slugline"
                style="@style/Text.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="A rather short description, not longer than two lines" />
        </LinearLayout>

        <Switch
            android:id="@+id/pack_switch"
            android:layout_width="@dimen/quad"
            android:layout_height="@dimen/quad" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/shadowColor" />
</LinearLayout>