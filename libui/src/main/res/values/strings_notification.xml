<resources>
    <string name="notification_on_text">Notifications</string>
    <!-- Parameter: branded app name (Blokada). -->
    <string name="notification_on_desc">When enabled, %s will display a notification every time an ad is blocked.</string>

    <!-- Title of the notification that shows up every time ad is blocked. -->
    <string name="notification_blocked_title">Ad blocked</string>
    <!-- Content of the notification that shows up every time ad is blocked. Parameter: blocked host name. -->
    <string name="notification_blocked_text">%s</string>
    <!-- Button to turn off notifications. -->
    <string name="notification_blocked_off">Don\'t show</string>
    <!-- Button to whitelist a host that was just blocked, visible in a notification. -->
    <string name="notification_blocked_whitelist">Whitelist</string>

    <!-- Toast message that shows up once user adds a host to the whitelist, using a button from the notification. -->
    <string name="notification_blocked_whitelist_applied">Done! Changes may take a few seconds.</string>

    <!-- Parameter: branded app name (Blokada). -->
    <string name="notification_disabled">%s will not display ad notifications.</string>
    <!-- Parameter: branded app name (Blokada). -->
    <string name="notification_enabled">%s will now display notifications every time an ad is blocked.</string>

    <string name="notification_keepalive_text">Keep alive</string>
    <!-- Parameter: branded app name (Blokada). -->
    <string name="notification_keepalive_desc">When enabled, %s will use techniques that help it to survive memory cleanup.</string>
    <!-- Parameter: branded app name (Blokada). -->
    <string name="notification_keepalive_disabled">%s is not protected from battery or memory saving anymore.</string>
    <!-- Parameter: branded app name (Blokada). -->
    <string name="notification_keepalive_enabled">%s will now protect itself from being deactivated by the operating system.</string>
    <!-- The ads blocked counter, displayed in the Keep Alive notification. Parameter: ads blocked counter. -->
    <plurals name="notification_keepalive_title">
        <item quantity="one">One ad blocked</item>
        <item quantity="other">%d ads blocked</item>
    </plurals>
    <!-- The most recently blocked host, displayed in the Keep Alive notification. Parameter: blocked host name -->
    <string name="notification_keepalive_content">Last: %s</string>
    <!-- Content of the Keep Alive notification, if nothing was blocked yet, as in "Last: nothing yet". -->
    <string name="notification_keepalive_none">nothing yet</string>
</resources>
