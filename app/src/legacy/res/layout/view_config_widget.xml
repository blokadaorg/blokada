<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/widget_cv_show_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/widget_show_counter"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/widget_cv_show_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/widget_show_domain"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/widget_cv_show_dns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/widget_show_dns"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff888888">

        <include
            android:id="@+id/widget_cv_preview"
            layout="@layout/widget_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />
    </FrameLayout>

    <Button
        android:id="@+id/widget_cv_okay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_okay" />
</LinearLayout>
