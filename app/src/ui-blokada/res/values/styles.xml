<resources>

    <style name="BlokadaColors" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/switch_on</item>
        <item name="colorControlNormal">@color/colorActive</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorActive</item>
        <item name="android:windowBackground">@drawable/bg_window_nontransparent</item>
    </style>

    <style name="BlokadaColors.Main"></style>

    <style name="BlokadaColors.Main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="BlokadaColors.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorActive</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorForeground">@color/colorActive</item>
    </style>

    <style name="Switch" parent="BlokadaColors">
        <item name="colorSwitchThumbNormal">@color/colorActive</item>
    </style>

    <style name="Switch2" parent="BlokadaColors">
        <item name="colorSwitchThumbNormal">@color/colorActive</item>
        <item name="colorAccent">@color/switch_on</item>
        <item name="android:textColorLink">@color/switch_on</item>
    </style>

    <style name="GsTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorActive</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorForeground">@color/colorActive</item>
    </style>

    <style name="GsTheme.Main">
        <item name="android:windowBackground">@drawable/bg_window_nontransparent</item>
    </style>

    <style name="GsTheme.Main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GsTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorActive</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorForeground">@color/colorActive</item>
    </style>

    <style name="TransparentWindow" parent="BlokadaColors.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
